{# templates/ingresar_saldo/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ingresar Saldo{% endblock %}

{% block body %}
<style>
body{
    background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(12,12,37,1) 14%, rgba(0,212,255,1) 100%);
}

.container {
    background-color:#DED6D6;
    border-radius: 20px;
    width: 100%;
    max-width: 500px;
    padding: 30px;
    margin-top: 100px;
    margin-bottom: 100px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

h1 {
    color: #fff;
    font-size: 2rem;
    margin-bottom: 1.5rem;
}

.form-group {
    margin-bottom: 1.5rem;
    color:black;
}

.form-control {
    border-radius: 10px;
    padding: 10px;
    border: 1px solid #ddd;
    font-size: 1rem;
}

.form-control:focus {
    border-color: #80bdff;
    outline: 0;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

.btn {
    border-radius: 10px;
    padding: 10px 20px;
    font-size: 1rem;
}

.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

.btn-secondary {
    background-color: #6c757d;
    border-color: #6c757d;
}

.btn-secondary:hover {
    background-color: #5a6268;
    border-color: #545b62;
}

.text-center {
    text-align: center;
}

.w-100 {
    width: 100%;
}
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h1 class="text-center text-success ">Ingresar Saldo</h1>

            {{ form_start(IngresarSaldoForm, { 'attr': { 'id': 'ingresarsaldoForm', novalidate: 'novalidate' } }) }}
                <div class="form-group">
                    {{ form_row(IngresarSaldoForm.numeroTarjeta, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <div class="form-group">
                    {{ form_row(IngresarSaldoForm.fechaValidez, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <div class="form-group">
                    {{ form_row(IngresarSaldoForm.cvc, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <div class="form-group">
                    {{ form_row(IngresarSaldoForm.dineroIngresar, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <button type="submit" class="btn btn-primary w-100">Ingresar Saldo</button>
            {{ form_end(IngresarSaldoForm) }}

            <a href="{{ path('perfil_usuario') }}" class="btn btn-secondary w-100 mt-3">Volver al Perfil</a>
        </div>
    </div>
</div>
{% endblock %}
